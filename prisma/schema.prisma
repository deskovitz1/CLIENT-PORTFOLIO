// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id           Int       @id @default(autoincrement())
  title        String    @db.VarChar(255)
  description  String?   @db.Text
  category     String?   @db.VarChar(100)
  video_url    String    @db.Text
  thumbnail_url String?  @db.Text
  blob_url     String    @db.Text
  file_name    String    @db.VarChar(255)
  file_size    BigInt?
  duration     Int?
  display_date DateTime? @db.Timestamp
  visible      Boolean   @default(true)  // Single source of truth for visibility
  created_at   DateTime  @default(now())
  updated_at   DateTime  @default(now()) @updatedAt

  @@index([category])
  @@index([created_at(sort: Desc)])
  @@index([display_date(sort: Desc)])
  @@index([visible])
  @@map("videos")
}


